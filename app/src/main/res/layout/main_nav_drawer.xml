<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/cream">

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/logo"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:onClick="clickLogo"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/calculator"
            android:onClick="clickLogo"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CGPA CALCULATOR"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:fontFamily="@font/dekko"
        android:gravity="center"
        android:layout_marginTop="10dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/black" />

    <TextView
        android:id="@+id/clickHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HOME"
        android:textSize="30dp"
        android:onClick="clickMenuHome"
        android:textColor="@color/black"
        android:fontFamily="@font/dekko"
        android:gravity="center"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/clickSemTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REGISTER SEM"
        android:textSize="30dp"
        android:onClick="clickMenuSem"
        android:textColor="@color/black"
        android:fontFamily="@font/dekko"
        android:gravity="center"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/clickReportTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CGPA REPORT"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:fontFamily="@font/dekko"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:onClick="clickReport"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOG OUT"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:fontFamily="@font/dekko"
        android:gravity="center"
        android:layout_marginTop="250dp"
        android:onClick="clickLogout"
        />

</LinearLayout>