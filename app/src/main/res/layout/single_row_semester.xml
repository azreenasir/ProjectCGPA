<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="@color/cream">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="20dp"
            android:layout_gravity="center"
            android:background="@drawable/circle_res">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="0.00"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:fontFamily="@font/dekko"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                >

                <TextView
                    android:id="@+id/SemNameTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="@font/dekko"
                    android:textSize="15dp"
                    android:gravity="start"
                    />

                <TextView
                    android:id="@+id/TotCreditTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="@font/dekko"
                    android:layout_marginTop="5dp"
                    android:textSize="15dp"
                    android:gravity="start"
                    android:text="TOTAL CREDIT: "/>

                <TextView
                    android:id="@+id/totCourseTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="@font/dekko"
                    android:layout_marginTop="5dp"
                    android:textSize="15dp"
                    android:gravity="start"
                    android:text="TOTAL COURSE: "/>

            </LinearLayout>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/cream"
                android:layout_marginEnd="5dp"
                android:src="@drawable/ic_baseline_more_horiz_24"></ImageButton>

        </LinearLayout>






    </LinearLayout>

</LinearLayout>